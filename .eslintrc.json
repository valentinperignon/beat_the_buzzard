{
	"env": {
		"browser": true,
		"node": true,
		"commonjs": true,
		"es6": true,
		"mocha": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 2018
	},
	"rules": {
		"semi": ["error", "always"],
		"no-case-declarations": "off",
		"no-fallthrough": "off"
	},
	"globals": {
		"io": true
	}
}
